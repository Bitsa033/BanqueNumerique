{% block body %}
<div class="container">
    <h1>Liste des comptes bancaires</h1>
    <button class="btn btn-primary" data-toggle="modal" data-target="#compte"><i class="ti-plus"></i></button>
    <table class="table table-bordered">
        <thead>
            <th>#</th>
            <th>Num compte</th>
            <th>Solde</th>
            <th>Client</th>
        </thead>
    
        <tbody>
            {% for item in comptes %}
            <td>{{item.id}}</td>
            <td>{{item.numero}}</td>
            <td>{{item.solde}}</td>
            <td>{{item.client.nom}}</td>
                
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
