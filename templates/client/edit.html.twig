{% extends "base.html.twig" %}
{% block body %}
<section class="content-wrapper">

    <div class="row">
        <div class="col-md-12">
            {% for message in app.flashes('statut_off') %}
            <div class="alert alert-danger text-center col-md-10 offset-1" style="margin-top: 2%;">
                {{ message }}
            </div>
            {% endfor %}

            {% for message in app.flashes('not_save_mismatch_client') %}
            <div class="alert alert-danger text-center col-md-10 offset-1" style="margin-top: 2%;">
                {{ message }}
            </div>
            {% endfor %}

            {% for message in app.flashes('not_save_mismatch_acount') %}
            <div class="alert alert-danger text-center col-md-10 offset-1" style="margin-top: 2%;">
                {{ message }}
            </div>
            {% endfor %}

            {% for message in app.flashes('success') %}
            <div class="alert alert-success text-center col-md-10 offset-1">
                {{ message }}
            </div>
            {% endfor %}
        </div>
    </div>

    <br>
    <div class="row">
        <div class="col-md-10 offset-1 alert alert-info">
            <p class="h3">Mise à jour</p>
        </div>
    </div>
    <div class="row">

        <div class="col-md-10 offset-1">

            <form autocomplete="off" method="post" id="form" action="{{path('updateClient')}}">

                <div class="form-group">
                    <label for="">Nom complet du Client</label>
                    <input type="text" name="nom" class="form-control" value="{{client.nom}}" id="nom" required>

                </div>
                <div class="form-group">
                    <label for="">Email</label>
                    <input type="email" name="email" class="form-control" value="{{client.email}}" id="nom" required>

                </div>
                <div class="form-group">
                    <label for="">Numero de télephone</label>
                    <input type="text" name="contact" class="form-control" value="{{client.contact}}" id="contact"
                        required>

                </div>

                <div class="form-group">
                    <label for="">Pays / Ville/Quartier</label>
                    <input type="text" name="adresse" class="form-control" value="{{client.adresse}}" id="adresse"
                        required>
                </div>

                <button type="submit" class="btn btn-primary">Mettre à jour</button>

            </form>

        </div>

    </div>
    <br>

</section>


{% endblock body %}