{% extends "base.html.twig" %}
{% block body %}
<section class="content-wrapper">

    <div class="row">
        {% for message in app.flashes('client_not_exist') %}
        <div class="alert alert-danger text-center col-md-10 offset-1" style="margin-top: 2%;">
            {{ message }}
        </div>
        {% endfor %}

        {% for message in app.flashes('success') %}
        <div class="alert alert-success text-center col-md-10 offset-1">
            {{ message }}
        </div>
        {% endfor %}
        <div class="col-md-10 offset-1">
            <form autocomplete="off" id="form" method="post" action="">
                <div class="form-group">
                    <label for="">Nom complet du Client</label>
                    <select type="text" name="client" class="form-control" id="adresse" required>
                        {% for row in clients %}
                        <option value="{{row.id}}">{{row.nom}}</option>
                        {% else %}

                        {% endfor %}
                    </select>
                </div>

                <button type="submit" class="btn btn-primary offset-2">Suivant</button>
            </form>

        </div>
    </div>

</section>

{% endblock body %}