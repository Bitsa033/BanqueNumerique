{% extends "base.html.twig" %}
{% block body %}
<section class="content-wrapper">

    <div class="row">
        {% for message in app.flashes('statut_off') %}
        <div class="alert alert-danger text-center col-md-5 offset-3" style="margin-top: 2%;">
            {{ message }}
        </div>
        {% endfor %}

        {% for message in app.flashes('success') %}
        <div class="alert alert-success container text-center col-md-5 offset-3">
            {{ message }}
        </div>
        {% endfor %}
        <div class="col-md-10 offset-1">
            <form autocomplete="off" id="form" method="post" action="{{path('bloquerCompteB')}}">
                <div class="form-group">
                    <label for="id_debit">Numero de Compte</label>
                    <input type="text" name="id_compte" class="form-control" id="id_debit" required>
                    <div class="validate"></div>
                </div>

                <button type="submit" class="btn btn-primary offset-2">Bloquer</button>
            </form>

        </div>
    </div>

</section>

{% endblock body %}