{% extends "base.html.twig" %}
{% block body %}
<section class="content-wrapper">

    <div class="row">
        {% for message in app.flashes('statut_off') %}
        <div class="alert alert-danger text-center col-md-10 offset-1" style="margin-top: 2%;">
            {{ message }}
        </div>
        {% endfor %}

        {% for message in app.flashes('amount_insuficient') %}
        <div class="alert alert-danger text-center col-md-10 offset-1">
            {{ message }}
        </div>
        {% endfor %}

        {% for message in app.flashes('success') %}
        <div class="alert alert-success text-center col-md-10 offset-1">
            {{ message }}
        </div>
        {% endfor %}
        <div class="col-md-10 offset-1">
            <form autocomplete="off" id="form" method="post" action="{{path('virementBancaireB')}}">
                <div class="form-group">
                    <label for="id_debit">Numero de Compte du débiteur</label>
                    <input type="text" name="num_compte_debit" class="form-control" id="id_debit" required>
                    <div class="validate"></div>
                </div>
                <div class="form-group">
                    <label for="credit">Numero de compte du receveur</label>
                    <input type="text" name="num_compte_credit" class="form-control" id="num_compte_receveur" required>
                    <div class="validate"></div>
                </div>

                <div class="form-group">
                    <label for="somme">Montant à transferer</label>
                    <input type="text" name="montant" class="form-control" id="montant" required>
                    <div class="validate"></div>
                </div>

                <div class="loading"></div>
                <div class="error-message"></div>
                <div class="message"></div>

                <button type="submit" class="btn btn-primary offset-2">Transferer</button>

            </form>

        </div>
    </div>


</section>
{% endblock body %}