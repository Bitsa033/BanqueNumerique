<!-- Modal pour les clients -->
<div class="bootstrap-modal">

  <div class="modal fade" id="client">
      <div class="modal-dialog" role="document">
          <div class="modal-content">
              <div class="modal-header">
                  <h5 class="modal-title">Client</h5>
                  <button type="button" class="close" data-dismiss="modal"><span>&times;</span>
                  </button>
              </div>
              <div class="modal-body">
                <form autocomplete="off" id="quickForm">
                    <div class="form-group">
                      <input type="text" name="id" class="form-control" id="id" placeholder="Id" data-rule="minlen:1"
                        data-msg="Entrer">
                      <div class="validate"></div>
                    </div>
                    <div class="form-group">
                      <input type="text" name="name" class="form-control" id="name" placeholder="Votre Nom" data-rule="minlen:1"
                        data-msg="Entrer">
                      <div class="validate"></div>
                    </div>
                    <div class="form-group">
                      <input type="name" name="adresse" class="form-control" id="adresse" placeholder="Votre contact"
                        data-rule="minlen:1" data-msg="Entrer">
                      <div class="validate"></div>
                    </div>
          
                    <div class="loading"></div>
                    <div class="error-message"></div>
                    <div id="message"></div>
          
                    {#
                  </form> #}
              </div>
              <div class="modal-footer">
                <button type="reset" class="btn btn-info">Annuler</button>
                <button type="submit" class="btn btn-primary" id="insert">Enregistrer</button>
                <button type="submit" class="btn btn-danger" id="removeOne">Supprimer</button>
                <button type="button" class="btn btn-info" data-dismiss="modal">Femer</button>
                </form>
              </div>
          </div>
      </div>
  </div>

