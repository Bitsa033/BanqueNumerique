<!-- Modal pour les clients -->
<div class="bootstrap-modal">

  <div class="modal fade" id="client">
      <div class="modal-dialog" role="document">
          <div class="modal-content">
              <div class="modal-header">
                  <h5 class="modal-title">Enregistrer le Client</h5>
                  <button type="button" class="close" data-dismiss="modal"><span>&times;</span>
                  </button>
              </div>
              <div class="modal-body">
                <form autocomplete="off" id="quickForm">
                    <div class="form-group">
                      <input type="text" name="name" class="form-control" id="name" placeholder="Nom du client">
                      <div class="validate"></div>
                    </div>
                    <div class="form-group">
                      <input type="name" name="adresse" class="form-control" id="adresse" placeholder="Numéro de téléphone">
                      <div class="validate"></div>
                    </div>
          
                    <div class="loading"></div>
                    <div class="error-message"></div>
                    <div id="message"></div>
          
                    {#
                  </form> #}
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Femer</button>
                <button type="submit" class="btn btn-primary" id="insert">Enregistrer</button>
                </form>
              </div>
          </div>
      </div>
  </div>

  <!-- Modal pour les comptes -->
<div class="bootstrap-modal">
    
    <div class="modal fade" id="compte">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Enregistrer une oppération sur le Compte</h5>
                    <button type="button" class="close" data-dismiss="modal"><span>&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                  <form autocomplete="off" id="quickForm">
                      <div class="form-group">
                        <label for="id_depot">Numero de Compte</label>
                        <input type="text" name="id_compte" class="form-control" id="id_compte" disabled>
                        <div class="validate"></div>
                      </div>
                      <div class="form-group">
                        <label for="somme">Somme</label>
                        <input type="text" name="somme" class="form-control" id="somme" placeholder="Entrer la Somme" required
                          >
                        <div class="validate"></div>
                      </div>
            
                      <div class="loading"></div>
                      <div class="error-message"></div>
                      <div class="message"></div>
            
                      {#
                    </form> #}
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary" id="depot">Déposer</button>
                    <button type="submit" class="btn btn-warning" id="retrait">Retirer</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Femer</button>
                  </form>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="virement">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Enregistrer une oppération sur le Compte</h5>
                    <button type="button" class="close" data-dismiss="modal"><span>&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                  <form autocomplete="off" id="quickForm">
                      <div class="form-group">
                        <label for="id_debit">Numero de Compte du débiteur</label>
                        <input type="text" name="id_debit" class="form-control" id="id_debit" disabled>
                        <div class="validate"></div>
                      </div>
                      <div class="form-group">
                        <label for="credit">Numero de compte du créditeur</label>
                        <input type="text" name="credit" class="form-control" id="credit" required
                          >
                        <div class="validate"></div>
                      </div>

                      <div class="form-group">
                        <label for="somme">Montant à transferer</label>
                        <input type="text" name="montant" class="form-control" id="montant" required
                          >
                        <div class="validate"></div>
                      </div>
            
                      <div class="loading"></div>
                      <div class="error-message"></div>
                      <div class="message"></div>
            
                      {#
                    </form> #}
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary" id="virement">Transferer</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Femer</button>
                  </form>
                </div>
            </div>
        </div>
    </div>

